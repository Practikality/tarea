<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_background"
    tools:context=".add_task_activity">

    <android.support.design.card.MaterialCardView
        android:id="@+id/add_task_card"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:minHeight="600dp"
        android:outlineAmbientShadowColor="@android:color/black"
        app:cardBackgroundColor="#261E1D"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"
        app:strokeColor="@android:color/black">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_task_from_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:minHeight="30dp"
                android:textColorHint="@color/light_yellow"
                app:boxStrokeColor="@color/light_yellow"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_task_from_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:editable="false"
                    android:autoSizeMinTextSize="18sp"
                    android:fontFamily="@font/productsans"
                    android:hint="From"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/light_yellow"
                    android:textColorHighlight="@color/light_yellow"
                    android:textColorHint="@color/light_yellow"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_task_to_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_task_from_layout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:minHeight="30dp"
                android:textColorHint="@color/light_yellow"
                app:boxStrokeColor="@color/light_yellow"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_task_to_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:autoSizeMinTextSize="18sp"
                    android:fontFamily="@font/productsans"
                    android:hint="To"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/light_yellow"
                    android:textColorHighlight="@color/light_yellow"
                    android:textColorHint="@color/light_yellow"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_task_title_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_task_to_layout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:minHeight="30dp"
                android:textColorHint="@color/light_yellow"
                app:boxStrokeColor="@color/light_yellow"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_task_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:autoSizeMinTextSize="18sp"
                    android:fontFamily="@font/productsans"
                    android:hint="Title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/light_yellow"
                    android:textColorHighlight="@color/light_yellow"
                    android:textColorHint="@color/light_yellow"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/add_task_desc_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_task_title_layout"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:minHeight="30dp"
                android:textColorHint="@color/light_yellow"
                app:boxStrokeColor="@color/light_yellow"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/add_task_desc_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:autoSizeMinTextSize="18sp"
                    android:fontFamily="@font/productsans"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="3"
                    android:padding="10dp"
                    android:textColor="@color/light_yellow"
                    android:textColorHighlight="@color/light_yellow"
                    android:textColorHint="@color/light_yellow"
                    android:textSize="18sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/deadline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_task_desc_layout"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="Deadline:"
                android:textColor="@color/light_yellow"
                android:textSize="15sp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/date_picker_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/deadline_text"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/productsans"
                android:gravity="center"
                android:text="Date"
                android:textAllCaps="false"
                android:textColor="@color/background_black"
                android:textSize="18sp"
                app:cornerRadius="8dp" />

            <android.support.design.button.MaterialButton
                android:id="@+id/time_picker_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_picker_button"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/productsans"
                android:text="Time"
                android:textAllCaps="false"
                android:textColor="@color/background_black"
                android:textSize="18sp"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/priority_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_picker_button"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:text="Priority: "
                android:textColor="@color/light_yellow"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/priority_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priority_text"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <RadioButton
                    android:id="@+id/radio_casual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/light_yellow"
                    android:padding="1dp"
                    android:text="Casual"
                    android:textColor="@color/light_yellow"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_important"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/light_yellow"
                    android:padding="1dp"
                    android:text="Important"
                    android:textColor="@color/light_yellow"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/radio_urgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/light_yellow"
                    android:padding="1dp"
                    android:text="Urgent"
                    android:textColor="@color/light_yellow"
                    android:textSize="16sp" />

            </RadioGroup>

        </RelativeLayout>

    </android.support.design.card.MaterialCardView>

    <android.support.design.button.MaterialButton
        android:id="@+id/add_task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_task_card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/light_yellow"
        android:elevation="15dp"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:onClick="addTask"
        android:paddingEnd="20dp"
        android:text="Add Task"
        android:textAllCaps="false"
        android:textColor="@color/background_black"
        android:textSize="20sp"
        app:cornerRadius="40dp"

        />
</RelativeLayout>