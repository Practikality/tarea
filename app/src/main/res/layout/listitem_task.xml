<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#eee"
    app:cardUseCompatPadding="true"
    android:id="@+id/list_item_card_view"
    app:contentPadding="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="7dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_item_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/productsans"
            android:text="Task Title"
            android:textColor="@color/background_black"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/list_item_task_assigned_to"
            android:layout_below="@id/list_item_task_title"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="someusernameoremail"
            android:textSize="18sp"
            android:textColor="#353535"/>
    </RelativeLayout>
</android.support.design.card.MaterialCardView>